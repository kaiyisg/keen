<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@android:drawable/alert_dark_frame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        tools:ignore="ContentDescription"
        android:id="@+id/imageView"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
            <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp">

                <TextView
                    android:text="Something to buy?"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="50dp"
                    android:textColor="#ffff00ff"
                    android:id="@+id/product_description" />
            </LinearLayout>
            <LinearLayout android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <Button
                        android:text="Buy Now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:id="@+id/buy_button"
                        android:layout_weight="1"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                        <tag android:id="@+id/buynow"
                            android:value="@string/buynow_value" />
                    </Button>

                    <Button
                        android:text="More info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_button"
                        android:layout_weight="1"
                        android:layout_marginBottom="55dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true">
                        <tag android:id="@+id/getinfo"
                            android:value="@string/getinfo_value" />/>
                    </Button>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
