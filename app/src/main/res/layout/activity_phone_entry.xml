<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noc.keen.ui.PhoneEntryActivity">
    <!--

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:digits="0123456789+"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/phonebg"
        android:layout_marginTop="40dp"
        android:layout_height="490dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_background">

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="40sp" />
        </LinearLayout>
    </RelativeLayout>

    <GridLayout
        android:layout_width="360dp"
        android:background="#D6D7D7"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_height="420dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/two" />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/three" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/one" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/four" />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/five" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/six" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/seven" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/nine" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="78dp"
            android:id="@+id/buttonstar"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/star" />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonzero"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/zero" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="79dp"
            android:id="@+id/buttonhex"
            android:layout_row="3"
            android:layout_column="2"
            android:src="@drawable/hash" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/clear"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/clear"
            android:layout_marginLeft="20dp" />
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ok"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/ok"
            android:layout_marginLeft="20dp" />
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/cancel"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@drawable/delete"
            android:layout_marginLeft="20dp" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/eight" />
    </GridLayout>

</RelativeLayout>
