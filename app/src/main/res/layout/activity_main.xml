<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starbucks_background"
    tools:context="com.noc.keen.ui.MainActivity">

    <FrameLayout
            android:layout_width="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_margin="50dp">

            <com.andexert.library.RippleView
                android:id="@+id/buy_now_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                rv_centered="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/buy_now_button"
                    android:layout_centerInParent="true"/>

            </com.andexert.library.RippleView>

        </FrameLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_margin="50dp">

        <com.andexert.library.RippleView
            android:id="@+id/more_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_centered="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_info_button"
                android:layout_centerInParent="true"/>

        </com.andexert.library.RippleView>

    </FrameLayout>

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="400dp"
        android:layout_marginLeft="50dp"
        android:background="@color/colorBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp">

        <!--<TextView
            android:text="@string/detail_prompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="58sp" />-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/main_text"
            android:id="@+id/imageView3" />
    </FrameLayout>

</RelativeLayout>
